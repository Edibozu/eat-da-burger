<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <img src="https://i2.wp.com/freepngimages.com/wp-content/uploads/2016/11/bacon-burger.png?fit=895%2C895"
                alt="burger" style="width:280px;height:275px;" />
            <h1>Eat-da-Burger!</h1>
        </div>
    </div>
</div>
<div class="col-sm-12 my-3">
    <div class="row d-flex justify-content-between">
        <ul class="col-sm-5">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>

        <ul class="col-sm-5">
            {{#each burgers}}
            {{#if devoured}}
            <li class="post-devoured-li d-flex my-3 justify-content-between">
                {{id}}. {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>

    </div>
</div>
<div class="container col-12 d-flex justify-content-center">
    <div class="row">
        <form class=" col-sm-12 create-form">
            <div class="form-group text-center">
                <input type="text" name="name" placeholder="Burger Name Here!">
            </div>
            <p class="text-center">
                <button class="submit-button justify-content-center" type="submit">Add Burger</button>
            </p>
        </form>
    </div>
</div>

</div>